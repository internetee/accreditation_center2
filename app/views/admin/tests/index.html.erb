<% content_for(:title) { "EIS | #{t('.title')}" } %>
<% content_for :hero do %>
  <div class="layout--hero">
    <h1><%= t('.title') %></h1>
    <%= back_link %>
  </div>
<% end %>

<div class="page page--admin-tests">
  <div class="page--header">
    <div class="wrapper">
      <%= render 'admin/tests/search_form' %>
    </div>
  </div>
  <div class="page--actions">
    <div class="wrapper">
      <div class="page--actions__left">
        <%= link_to t('.new'), new_admin_test_path, class: 'button button--secondary' %>
      </div>
    </div>
  </div>
  <div class="page--content">
    <div class="wrapper">
      <%= render 'test_table' %>
      <%= render partial: 'common/pagination', locals: { pagy: @pagy } if @tests.count.positive? %>
    </div>
  </div>
</div>
