<% content_for(:title) { "EIS | #{t('.title')}" } %>
<% content_for :hero do %>
  <div class="layout--hero">
    <h1><%= t('.title') %></h1>
    <%= back_link %>
  </div>
<% end %>

<div class="page page--admin-tests">
  <div class="page--header">
    <div class="wrapper">
      <%= render 'admin/users/search_form' %>
    </div>
  </div>
  <div class="page--actions">
  </div>
  <div class="wrapper">
    <%= render 'user_table' %>
    <%= render partial: 'common/pagination', locals: { pagy: @pagy } if @users.count.positive? %>
  </div>
</div>
