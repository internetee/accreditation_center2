<% content_for(:title) { "EIS | #{t('.title')}" } %>
<% content_for :hero do %>
  <div class="layout--hero">
    <h1><%= t('.title') %></h1>
    <%= back_link %>
  </div>
<% end %>

<div class="page page--admin-test-categories">
  <div class="page--header">
    <div class="wrapper">
      <%= render 'admin/test_categories/search_form' %>
    </div>
  </div>
  <div class="page--actions">
    <div class="wrapper">
      <div class="page--actions__left">
        <%= link_to t('.new'), new_admin_test_category_path, class: 'button button--secondary' %>
      </div>
    </div>
  </div>

  <div class="wrapper">
    <%= render 'test_category_table' %>
    <%= render partial: 'common/pagination', locals: { pagy: @pagy } if @test_categories.count.positive? %>
  </div>
</div>